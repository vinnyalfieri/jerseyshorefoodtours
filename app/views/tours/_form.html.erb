<%= form_for @tour do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>


  <%= f.label :capacity  %>
  <%= f.text_field :capacity %>


  <%= f.label :start_date  %>
  <%= f.text_field :start_date %>

  <%= f.label :start_time  %>
  <%= f.text_field :start_time %>

  <%= f.label :type  %>
  <%= collection_select :tour, :type_id, Type.all.order(:name), :id, :name, {prompt: true, class: "dropdown-menu" }, { style:"width:100%"} %>  

<% end %>